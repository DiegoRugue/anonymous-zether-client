{
  "extends": ["eslint:recommended"],
  "rules": {
    "strict": "error",
    "indent": ["error",2],
    "no-trailing-spaces": "error",
    "semi": ["error","always"],
    "valid-jsdoc": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  }
}